---
import Button from "@ui/Button.astro";
---

<section class="home">
  <h1 class="title text-animate-fade-slide-down">Nebula Obfuscator</h1>
  <p class="changing-text text-glow-pulse text-animate-fade-slide-up">
    Enterprise-level security · High performance · Anti-reverse engineering
  </p>
  <p class="subtitle
text-animate-fade-slide-up">
    Protect your Java applications with advanced bytecode obfuscation engineered
    for security, stability and professional pipelines.
  </p>
  <Button
    className="scale-shadow-out"
    text="Get Started"
    url="https://discord.gg/USU58JPSCA"
  />
  <article class="stats">
    <div>
      <h3 class="stat-number" data-count-target="120000" data-suffix=""></h3>
      <span>Lines protected</span>
    </div>
    <div>
      <h3 class="stat-number" data-count-target="12" data-suffix=""></h3>
      <span>Avg. protection layers</span>
    </div>
    <div>
      <h3 class="stat-number" data-count-target="99" data-suffix="/100"></h3>
      <span>Security rating</span>
    </div>
  </article>
</section>

<style>
  .home {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-height: 100vh;
    gap: 2.5rem;
    overflow: hidden;
    padding-inline: 20px;
    padding-top: calc(var(--nav-height) + var(--padding-top-nav-section));
  }

  .title {
    font-size: 3rem;
  }

  .subtitle {
    color: #dcdcdc;
    font-size: 1.15rem;
    max-width: 650px;
  }

  .stats {
    margin-top: 2rem;
    display: flex;
    gap: 2.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .stats div {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(138, 43, 226, 0.2);
    padding: 18px 28px;
    border-radius: 1rem;
    min-width: 130px;
    backdrop-filter: blur(6px);
    transition: 0.3s ease;
  }

  .stats div:hover {
    transform: translateY(-8px);
    border-color: var(--purple2);
    box-shadow: 0 0 18px rgba(138, 43, 226, 0.25);
  }

  .stats h3 {
    color: var(--purple2);
    font-size: 1.6rem;
  }

  .stats span {
    color: #dcdcdc;
    font-size: 0.9rem;
  }

  @media (min-width: 768px) {
    .home {
      padding-top: calc(
        var(--nav-height) + var(--padding-top-nav-section) + 50px
      );
    }
  }
</style>

<script>
  import { applyCountUpAnimation } from "@scripts/ui/counter";
  applyCountUpAnimation();
</script>
