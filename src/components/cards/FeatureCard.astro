---
const { Icon, title, text } = Astro.props;
---

<article class="feature-card">
  <div class="icon" aria-hidden="true">
    <Icon />
  </div>
  <h3>{title}</h3>
  <p>{text}</p>
</article>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    justify-content: flex-start;
    padding: 24px 30px;
    border-radius: 12px;
    background: linear-gradient(135deg, #2d1b4e 0%, #1a0a2e 100%);
    box-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
    border: 1px solid rgba(138, 43, 226, 0.6);
    max-width: 320px;
    gap: 16px;
    color: #d37dea;
    transition: box-shadow 0.3s ease;
  }

  .feature-card .icon {
    width: 48px;
    height: 48px;
    margin-bottom: 8px;
    fill: #d37dea;
  }

  .feature-card h3 {
    font-weight: 700;
    font-size: 1.25rem;
    color: #d37dea;
    margin: 0;
  }

  .feature-card p {
    font-size: 1rem;
    line-height: 1.4;
    color: #ccc;
    margin: 0;
    max-width: 280px;
  }
</style>
